<UserControl x:Class="QueryPressure.WinUI.Views.PropertiesViews.ArgumentView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QueryPressure.WinUI.Views.PropertiesViews"
             xmlns:properties="clr-namespace:QueryPressure.WinUI.ViewModels.Properties"
             xmlns:ex="clr-namespace:QueryPressure.WinUI.Common.Extensions"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance d:Type=properties:ArgumentViewModel}"
             d:DesignHeight="24" d:DesignWidth="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" VerticalAlignment="Center" 
               Content="{ex:Locale Binding={Binding LocalizationKey}}"/>
        <TextBox Grid.Column="1" VerticalAlignment="Center" Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</UserControl>
